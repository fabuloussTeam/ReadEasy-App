// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model livre {
  id_livre      Int     @id @default(autoincrement())
  isbn          String    
  titre         String
  description   String
  prix          Decimal
  est_gratuit   Boolean @default(false)
  auteur        String?
  url_image     String?
  document      String?
  utilisateur   utilisateur @relation(fields: [id_utilisateur], references: [id_utilisateur])
  id_utilisateur Int     @default(1) // Assuming 1 is the ID of the default user
}

model utilisateur {
  id_utilisateur    Int     @id @default(autoincrement())
  nom               String
  prenom            String?
  courriel          String
  mot_de_passe      String
  acces             Int     @default(1)
  livres            livre[]
}